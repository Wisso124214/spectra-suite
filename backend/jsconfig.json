{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@repository/*": ["src/repository/*"],
      "@business/*": ["src/_business/*"],
      "@ftx/*": ["src/_business/ftx/*"],
      "@security/*": ["src/security/*"],
      "@debugger/*": ["src/debugger/*"],
      "@dbms/*": ["src/dbms/*"],
      "@formatter/*": ["src/formatter/*"],
      "@atx/*": ["src/_business/atx/*"]
    }
  },
  "include": [
    "src",
    "src/services",
    "src/utils",
    ".dev-trials",
    "*.js",
    "config/secret-config.js",
    "config/config.js",
    "config/secret-config-example.js",
    "src/_business"
  ],
  "exclude": ["node_modules"]
}
