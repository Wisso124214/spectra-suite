{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend session",
  "license": "ISC",
  "author": "LB",
  "type": "module",
  "main": "back.js",
  "imports": {
    "#root/*": "./*",
    "#config/*": "./config/*",
    "#src/*": "./src/*",
    "#repository/*": "./src/repository/*",
    "#session/*": "./src/session/*",
    "#security/*": "./src/security/*",
    "#dbms/*": "./src/dbms/*",
    "#mailer/*": "./src/mailer/*",
    "#tokenizer/*": "./src/tokenizer/*",
    "#validator/*": "./src/validator/*",
    "#debugger/*": "./src/debugger/*",
    "#services/*": "./src/services/*",
    "#utils/*": "./src/utils/*",
    "#dispatcher/*": "./src/dispatcher/*",
    "#formatter/*": "./src/formatter/*",
    "#business/*": "./src/_business/*",
    "#atx/*": "./src/_business/atx/*",
    "#bo/*": "./src/_business/bo/*",
    "#backer-scm/*": "./src/_business/backer-scm/*",
    "#ftx/*": "./src/_business/ftx/*"
  },
  "scripts": {
    "test": "npm run test:integration",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:repository": "cross-env TEST_REPOSITORY=true node .dev-trials/trail-methods.js",
    "test:integration": "jest --runInBand --config=jest.config.cjs",
    "ci:test": "cross-env TEST_REPOSITORY=true TEST_TEARDOWN=true node .dev-trials/trail-methods.js",
    "seed:db-structure": "node .dev-trials/seed-db-structure.js",
    "seed:reset": "node .dev-trials/seed-db-structure.js --reset",
    "seed:check": "node .dev-trials/seed-db-structure.js --check-permissions",
    "seed:reset-check": "node .dev-trials/seed-db-structure.js --reset --check-permissions",
    "check:permissions": "node .dev-trials/check-permissions.js",
    "test:trail": "cross-env TEST_TRAIL_METHODS=true node .dev-trials/trail-methods.js",
    "test:repo:skip-purge": "cross-env TEST_REPOSITORY=true SKIP_PURGE=true node .dev-trials/trail-methods.js",
    "test:security:load": "node .dev-trials/test-load-permissions.js",
    "test:security:change": "node .dev-trials/test-change-permission.js",
    "test:security:check-permission": "node .dev-trials/test-check-permission.js",
    "test:security": "npm run -s test:security:load && npm run -s test:security:change",
    "ci:test:security": "npm run -s seed:reset-check && npm run -s test:security"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "customize-cra": "^1.0.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "fs": "^0.0.1-security",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "module-resolver": "^1.0.0",
    "mongodb": "^6.20.0",
    "mongoose": "^8.18.2",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "resend": "^6.1.0",
    "testcontainers": "^8.16.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/register": "^7.28.3",
    "babel-plugin-module-resolver": "^5.0.2",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
